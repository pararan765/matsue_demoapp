<div class="new-make"> 
  <h2>ログイン</h2>
</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-wrapper">
      <div class="color-login-filter">
        <div class="text-form">
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email,class: "input-default", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, class: "input-default",autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field remember">
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを記憶する %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン",class:"register-btn"%>
          </div>
          <% end %>
        </div>
      </div>
    </div>


